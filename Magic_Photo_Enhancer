<!DOCTYPE html>
<html lang="hi">
<head>
    <meta charset="UTF-8">
    <title>AI Photo Magic Studio</title>
    <style>
        body { font-family: 'Arial', sans-serif; background: #eef2f3; text-align: center; padding: 20px; }
        .box { background: white; max-width: 500px; margin: auto; padding: 30px; border-radius: 15px; box-shadow: 0 5px 15px rgba(0,0,0,0.1); }
        button { background: #4f46e5; color: white; border: none; padding: 12px 20px; border-radius: 8px; cursor: pointer; margin: 5px; width: 100%; font-size: 16px; }
        img { max-width: 100%; margin-top: 20px; border-radius: 10px; display: none; }
        #msg { color: #4f46e5; font-weight: bold; margin: 10px 0; }
    </style>
</head>
<body>
    <div class="box">
        <h2>‚ú® AI Photo Editor</h2>
        <input type="file" id="uploadInput" accept="image/*">
        <p id="msg"></p>
        
        <button onclick="processImage('enhance')">ü™Ñ Photo Saaf Karein (Enhance)</button>
        <button onclick="processImage('bg-remove')">‚úÇÔ∏è Background Hatayein</button>
        <button onclick="processImage('colorize')">üé® B&W ko Rangeen Karein</button>

        <img id="outputImg" src="">
        <br><a id="dlLink" href="#" download style="display:none; color:blue;">‚¨áÔ∏è Download Photo</a>
    </div>

    <script>
        // YAHAN APNI DETAILS DALEIN
        const MY_CLOUD = "YOUR_CLOUD_NAME"; 
        const MY_PRESET = "YOUR_PRESET";
        let mainUrl = "";

        // Photo Upload Function
        document.getElementById('uploadInput').onchange = async (e) => {
            const file = e.target.files[0];
            document.getElementById('msg').innerText = "Uploading... Please wait";
            
            const formData = new FormData();
            formData.append('file', file);
            formData.append('upload_preset', MY_PRESET);

            const res = await fetch(`https://api.cloudinary.com/v1_1/${MY_CLOUD}/image/upload`, {
                method: 'POST', body: formData
            });
            const data = await res.json();
            mainUrl = data.secure_url;
            document.getElementById('msg').innerText = "Photo Upload Ho Gayi!";
        };

        // Magic Processing Function
        function processImage(type) {
            if(!mainUrl) return alert("Pehle photo select karein!");
            document.getElementById('msg').innerText = "AI Magic Chal raha hai...";
            
            let finalUrl = "";
            if(type === 'enhance') finalUrl = mainUrl.replace('/upload/', '/upload/e_enhance/');
            if(type === 'bg-remove') finalUrl = mainUrl.replace('/upload/', '/upload/e_background_removal/');
            if(type === 'colorize') finalUrl = mainUrl.replace('/upload/', '/upload/e_colorize/');

            const imgTag = document.getElementById('outputImg');
            imgTag.src = finalUrl;
            imgTag.style.display = "block";
            
            const dl = document.getElementById('dlLink');
            dl.href = finalUrl;
            dl.style.display = "inline-block";
            document.getElementById('msg').innerText = "Taiyar hai!";
        }
    </script>
</body>
</html>
